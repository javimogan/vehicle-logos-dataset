{
  "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "es6",
      "noImplicitAny": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "./dist",
      "baseUrl": ".",
      "typeRoots" : ["node_modules/@types", "src/types"],
      "paths": {
          "*": [
              "node_modules/*"
          ]
      }
  },
  "include": ["./**/*"],
  "exclude": ["node_modules", "**/*.spec.ts", "dist"]
}